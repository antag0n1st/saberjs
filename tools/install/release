@echo off
title Release

rem navigate to batch file directory
cd /D "%~dp0"

cls
set /p vernum=<tools/release/version
set /a vernum=%vernum% + 1
echo %vernum% > tools/release/version

call grunt
call py tools/release/release.py %vernum%

start "" http://localhost/{dir_name}/release/index.html

@echo off
echo.
echo.
echo Would you like to publish this ? y/n default(n)
set /p publish_me=



if "%publish_me%" == "y" (
call publish.bat
) else (
timeout 5
)


